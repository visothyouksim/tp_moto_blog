    <link rel="stylesheet" href="{{ asset('js/scripts.js') }}">
{% endblock %}

{% block body %}
    <!-- header -->
    {% include 'components/_header.html.twig' %}

    <!-- main -->
    <main>
        {% block content %}{% endblock %}
    </main>

    <!-- footer -->
    {% include 'components/_footer.html.twig' %}

{% endblock %}
