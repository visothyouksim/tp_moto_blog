{% extends "layout.html.twig" %}

{% block page_title %}Accueil{% endblock %}
 
{% block content %}
    <!-- Page Header-->
    <header class="masthead" style="background-image: url('{{ asset('assets/img/addPost.jpg') }}')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        {% include 'components/_flash.html.twig' %}
                        <h1>MOTO BLOG</h1>
                        <span class="subheading">Un super blog pour les super motards !</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content-->
    <div class="container px-4 px-lg-5 mb-3">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <!-- Post preview-->
                {% for post in posts %}
                    <div class="post-preview border rounded-3 mb-5 px-5">
                        <a href="#">
                            <h2 class="post-title">{{ post.title }}</h2>
                            <img src="{{ post.image }}" alt="{{ post.title }}" class="img-fluid w-100 border rounded-3">
                        </a>

                        <p class="content">{{ post.content | raw }}</p>
                        <p class="post-meta">
                            Publi√© par
                            <a href="#">{{ post.user.firstName }} {{ post.user.lastName }}</a>
                            le {{ post.publishedAt|date('d/m/Y') }}
                        </p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

