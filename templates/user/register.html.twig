{% extends 'layout.html.twig' %}

{% block page_title %} Inscription {% endblock %}

{% block content %}
    <header class="masthead" style="background-image: url('{{ asset('assets/img/z1000.jpg') }}')">
        <div class="container position-relative px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <div class="site-heading">
                        {% include 'components/_flash.html.twig' %}
                        <h1>MOTO BLOG</h1>
                        <span class="subheading">Un super blog pour les super motards !</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-xl-5 col-md-6 mx-auto">
                <h1 class="text-center mb-3">Inscription</h1>
                {{ form(form) }}
            </div>
        </div>
    </div>
{% endblock %}